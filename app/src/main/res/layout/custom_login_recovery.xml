<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/status_dialog_bg"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recover Password"
        android:textSize="35dp"
        android:gravity="center"
        />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/email_recovery_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/recovery_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:hint="Input Email" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/email_contact_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/recovery_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="10"
            android:singleLine="true"
            android:hint="Input Contact Number" />

    </android.support.design.widget.TextInputLayout>

  <Button
      android:id = "@+id/recoverpassword"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Send Password"

      />
    <Button
        android:id="@+id/cancel_recover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"

        />


</LinearLayout>